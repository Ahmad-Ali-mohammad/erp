# Copy to .env.demo.domain on VPS
COMPOSE_PROJECT_NAME=construction_erp_demo_domain

DB_MODE=mysql
DJANGO_SECRET_KEY=CHANGE_ME_DEMO_SECRET_KEY
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,demo.example.com,frontend,backend
DJANGO_CSRF_TRUSTED_ORIGINS=https://demo.example.com,http://demo.example.com

MYSQL_DB=construction_erp
MYSQL_USER=erp
MYSQL_PASSWORD=CHANGE_ME_DEMO_DB_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_DEMO_DB_ROOT_PASSWORD
MYSQL_HOST=db
MYSQL_PORT=3306

POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_PORT=

SEED_DEMO_DATA=true
POSTING_V2_MODE=compat
API_V1_READONLY=true

# Frontend talks to backend through Docker network
INTERNAL_API_BASE_URL=http://backend:8000
NEXT_PUBLIC_API_BASE_URL=http://backend:8000

NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
GOOGLE_OAUTH_CLIENT_ID=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
